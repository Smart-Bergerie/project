                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row align-items-end">
                        <div class="col-md-6">
                            <div class="form-label-group">
                               {# <input type="text" id="numeroTelephone" class="form-control" placeholder="Telephone" autofocus="autofocus">#}

                                {{ form_row(form.Telephone) }}

                                {#<label for="numeroTelephone">Entrez votre numero de telephone</label>#}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">

                                {{ form_row(form.Sexe) }}

                            </div>
                        </div>
                    </div>
                </div>

                <input class="btn btn-success btn-block" type="submit" value="ENREGISTRER">
            {{ form_end(form) }}
            <div class="text-center">
                <a class="d-block small text-success mt-3" href="{{ path('user.connexion') }}">Connecter-vous</a>
            </div>
        </div>
    </div>

</</div>
{% endblock %}