                        {{ form_row(form.Email) }}
                        {#<label for="inputEmail">Entrer votre adresse de courriel</label>#}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        {#<input type="text" id="inputEmail" class="form-control" placeholder="Entrer votre nom d'utilisateur" required="required">#}
                        {{ form_row(form.Username) }}
                        {#<label for="inputEmail">Entrer votre nom d'utilisateur</label>#}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row align-items-end">
                        <div class="col-md-6">
                            <div class="form-label-group">
                               {# <input type="password" id="mdp" class="form-control" placeholder="Entrer votre mot de passe" required="required">#}
                                {{ form_row(form.Password) }}
                                {#<label for="mdp">Entrer votre mot de passe</label>#}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {#<input type="password" id="mdpConf" class="form-control" placeholder="Entrer a nouveau votre mot de passe" required="required">#}
                                {{ form_row(form.confirm_password) }}
