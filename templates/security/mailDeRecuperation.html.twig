{% extends 'base.html.twig' %}
    {% block stylesheet %} <link href="vendor/bootstrap/css/sb-admin.css" rel="stylesheet"> {% endblock %}
{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="card card-login mx-auto mt-5 mb-5">
            <div class="card-header">Reinitialisation de mot de passe</div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <h4>Mot de passe oublie ? </h4>
                    <p>Entrez votre adresse de courriel (email) et nous allons vous envoyer les instructions de reinitialisation de votre mot de passe.</p>
                </div>
                <form action="{{ path('user.mdpRecuperation') }}" method="post">
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="email" name="email" id="inputEmail" class="form-control" required="required" autofocus="autofocus">
                            <label for="inputEmail">Entrez votre adresse de courriel</label>
                        </div>
                    </div>

                    <input class="btn btn-success btn-block" type="submit" value="M'envoyer les instructions par mail">
                </form>
                <div class="text-center">
                    <a class="d-block small text-success mt-3" href="{{ path('user.inscription') }}">Creer un compte</a>
                    <a class="d-block small text-success" href="{{ path('user.connexion') }}">Connexion</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}