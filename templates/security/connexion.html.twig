    {% extends 'base.html.twig' %}
    {% block stylesheet %} <link href="vendor/bootstrap/css/sb-admin.css" rel="stylesheet"> {% endblock %}
    {% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="card card-login mx-auto mt-5 mb-5">
            <div class="card-header">CONNEXION</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="text" id="inputEmail" class="form-control" name="_username" placeholder="Entrer votre nom d'utilisateur">
                            <label for="inputEmail">Entrer votre nom d'utilisateur</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" name="_password" class="form-control" placeholder="Entrer votre nom d'utilisateur" required="required">
                            <label for="inputPassword">Entrer votre mot de passe</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="souvenir de moi">
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <input class="btn btn-success btn-block" type="submit" value="Se connecter">
                </form>
                <div class="text-center">
                    <a class="d-block small text-success mt-3" href="{{ path('user.inscription') }}">Inscrivez-vous</a>
                    <a class="d-block small text-success" href="{{ path('user.motdepasseoublier') }}">Mot de passe oublie?</a>
                </div>
            </div>
        </div>

    </div>
   <!-- /.page content -->
    {% endblock %}
