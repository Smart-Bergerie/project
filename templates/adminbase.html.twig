    {#<link href="vendor/bootstrap/css/sb-admin.css" rel="stylesheet">#}
    <!-- Custom styles for this template-->
    {% block stylesheet %}{% endblock %}

    <style type="text/css">
        #fixed-square {
            position: fixed;
            top: -100;
            right: 0;
            cursor: pointer;
            padding: 0px 18px 0px 0px;

            -webkit-transition: all 0.145s ease-out;
            -moz-transition: all 0.145s ease-out;
            -ms-transition: all 0.145s ease-out;
            transition: all 0.145s ease-out;
        }

        .searchbar{

            height: 0px;
            background-color: #0C9D1F;
            border-radius: 30px;
            padding: 0px;
        }

        .search_input{
            color: white;
            border: 0;
            outline: 0;
            background: #0C9D1F;
            border-radius: 50px 50px ;
            width: 0;
            caret-color:transparent;
            line-height: 40px;
            transition: width 0.4s linear;
        }

        .searchbar:hover > .search_input{
            width: 200px;
            caret-color:red;
            transition: width 0.45s linear;
        }

        .searchbar:hover > .search_icon{
            background: white;
            color: #e74c3c;
        }

        .search_icon{
            height: 40px;
            width: 40px;
            float: right;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            color: white;
        }
    </style>

    {% block style %}{% endblock %}
</head>

